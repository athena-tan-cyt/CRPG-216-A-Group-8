print('Please select the type of purchase:')
print('C: Coffee Beans')
print('T: Tea Boxes')
customer_order = input('>>> ')
#The display menu + customer input

if (customer_order == 'c'or customer_order =='C'):
    coffee_weight = float(input('Enter the number of kilograms (kg) of coffee: '))
    if coffee_weight > 0:
        price_coffee = coffee_weight*18.5
        if coffee_weight >= 25:
            discount_coffee = price_coffee*0.9
        elif coffee_weight <= 25:
            discount_coffee = price_coffee *1

    elif coffee_weight <= 0:
        print('Quantity of coffee should be > 0')
        exit()
#if customer orders coffee
if (customer_order == 't'or customer_order =='T'):
    tea_boxes = float(input('Enter the number of boxes of tea: '))
    if tea_boxes > 0:
        price_tea = tea_boxes      
    elif tea_boxes <= 0:
        print('Number of tea boxes should be > 0')
        exit()
